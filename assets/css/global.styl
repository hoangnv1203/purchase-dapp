@import "~kouto-swiss/index.styl"

meyer-reset()
box-sizing-reset()
normalize()

html, body
  background: #ffffff
  font-size: 16px
  height: 100%

body
  overflow-x: hidden
  overflow-y: auto
  position: relative
  -webkit-overflow-scrolling: touch

#root
  min-height: 100%
  display: flex
  flex-direction: column
  transition: opacity 1s
  opacity: 0

*
  -webkit-tap-highlight-color: rgba(0,0,0,0)

  &::placeholder
    color: #777
    opacity: .5

@import "./animations/logo"
@import "./animations/toast"
@import "./fonts/space-mono"
@import "~nprogress/nprogress.css"

#nprogress
  position: relative
  z-index: 9999999
